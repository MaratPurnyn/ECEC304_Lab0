include "m8c.inc"


;--------------------------------------------------
; Constants for DBB00 API's.
;--------------------------------------------------

DBB00_CONTROL_REG_START_BIT:               equ 0x01    ; Control register start bit
DBB00_INT_REG:                             equ 0x0e1
DBB00_INT_MASK:                            equ 0x01


;--------------------------------------------------
; Constants for DBB00 user defined values
;--------------------------------------------------

DBB00_PERIOD:                              equ 0xff
DBB00_PULSE_WIDTH:                         equ 0xff


;--------------------------------------------------
; Register Address Constants for DBB00
;--------------------------------------------------

DBB00_COUNTER_REG:                     equ 0x20   ; DR0 Count register
DBB00_PERIOD_REG:                      equ 0x21   ; DR1 Period register
DBB00_COMPARE_REG:                     equ 0x22   ; DR2 Compare register
DBB00_CONTROL_REG:                     equ 0x23   ; Control register
DBB00_FUNC_REG:                        equ 0x20   ; Function register
DBB00_INPUT_REG:                       equ 0x21   ; Input register
DBB00_OUTPUT_REG:                      equ 0x22   ; Output register


;--------------------------------------------------
; DBB00 Macro 'Functions'
;--------------------------------------------------

   macro DBB00_Start_M
   or    reg[DBB00_CONTROL_REG],  DBB00_CONTROL_REG_START_BIT
   endm

   macro DBB00_Stop_M
   and   reg[DBB00_CONTROL_REG], ~DBB00_CONTROL_REG_START_BIT
   endm

   macro DBB00_EnableInt_M
   M8C_EnableIntMask DBB00_INT_REG, DBB00_INT_MASK
   endm

   macro DBB00_DisableInt_M
   M8C_DisableIntMask DBB00_INT_REG, DBB00_INT_MASK
   endm


